<h1>Reviews</h1>
    <% if user_signed_in? %>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Rating</th>
                <th>Comment</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        <% @user_reviews.each do |review| %>
            <tr>
                <td><%= link_to review.book.name, book_path(review.book) %></td>
                <td><%= review.rating %></td>
                <td><%= review.comment %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
<% end %>