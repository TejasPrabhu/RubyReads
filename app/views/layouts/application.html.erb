<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bookshop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <style>
        button.nav-link {
            background: none;
            border: 0;
        }

        .book-shop-navbar {
            display: flex;
            width: 100%;
        }

        .book-shop-navbar > .book-shop-current-user{
            margin-left: auto;
            text-align: right;
        }
    </style>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <div class = "navbar-header"><%= link_to "Book Shop", root_path,  class:"navbar-brand" %></div>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 book-shop-navbar">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "My Profile", edit_user_registration_path,  class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "My Purchases", transactions_path,  class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Cart (#{cart_size})", cart_path,  class:"nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to "My Reviews",  my_reviews_path(id: current_user.id), class:"nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to "Search Reviews", reviews_path, class:"nav-link" %>
            </li>
            <% if is_admin %>
              <li class="nav-item">
                <%= link_to "Users", members_path,  class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "All Reviews", reviews_path, class:"nav-link" %>
              </li>
            <% end %>
              <li class="nav-item">
              <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
            <li class="nav-item nav-link book-shop-current-user">

              Hello
              <%= current_user.username  %>
            </li>

          <% else %>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_registration_path,  class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign In", new_user_session_path,  class:"nav-link" %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
    <script src="/assets/jquery.raty.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>

