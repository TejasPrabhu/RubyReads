<%= simple_form_for(@user, url: member_path, html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :username, required: true, autofocus: true, readonly: true %>
    <%= f.input :email, required: true, autofocus: true, readonly: true %>
    <%= f.input :name, required: true, autofocus: true, readonly: false %>
    <%= f.input :address, required: false, autofocus: true, readonly: false %>
    <%= f.input :credit_card_number, required: false, autofocus: true, readonly: false %>
    <%= f.input :phone_number, required: false, autofocus: true, readonly: false %>
    <%= f.input :password,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: "btn btn-outline-secondary" %>
  </div>
<% end %>